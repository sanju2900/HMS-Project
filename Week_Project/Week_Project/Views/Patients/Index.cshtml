@model IEnumerable<Week_Project.Models.Patient>

@{
    ViewData["Title"] = "Index";
}


<h1 style="padding-left:380px;color:brown">Patient List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Appointment</a>
</p>
<table class="table" >
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_Problem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todays_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Problem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Todays_date)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Patient_id"><i class="bi bi-pencil-square"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Patient_id"><i class="bi bi-ticket-detailed-fill"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Patient_id"><i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
