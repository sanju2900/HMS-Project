@using Microsoft.AspNetCore.Identity
@using Week_Project.Areas.Identity.Data

@inject SignInManager<Week_ProjectUser> SignInManager
@inject UserManager<Week_ProjectUser> UserManager

<ul class="navbar-nav">

@if (SignInManager.IsSignedIn(User))
{
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="padding-left:399px">
            <ul class="navbar-nav container-fluid flex-grow-1">

               
                <li class="nav-item ">
                    <a class="nav-link text-dark btn-close-white" asp-area="" asp-controller="Admin_pg" asp-action="Index">Staff</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-dark btn-close-white" asp-area="" asp-controller="Doctor_Detail" asp-action="Index">Doctor_Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark btn-close-white" asp-area="" asp-controller="Patients" asp-action="Index">Patient_Details</a>
                </li>
            </ul>
        </div>

       
    <li class="nav-item">
            <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-light">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
