@model IEnumerable<Week_Project.Models.Admin_pg>

@{
    ViewData["Title"] = "Index";
}


<h1 style="padding-left:380px;color:brown">Staff History</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Staff</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Admin_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin_Email)
            </th>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.Admin_password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Admin_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin_Email)
            </td>
            <td style="display:none">

                @Html.DisplayFor(modelItem => item.Admin_password)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Admin_Id"><i class="bi bi-pencil-square"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Admin_Id"><i class="bi bi-ticket-detailed-fill"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Admin_Id"><i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
